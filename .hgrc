[ui]
username = Matias Aguirre <matiasaguirre@gmail.com>
ssh = ssh -C
ignore = ~/.hgignore
#merge = vimdiff

[merge-tools]
threesome.executable = gvim
threesome.args = -f $base $local $other $output -c 'ThreesomeInit'
threesome.premerge = keep
threesome.priority = 1
#vimdiff.executable = vim
#vimdiff.args = -d $base $local $output $other +close +close

[extensions]
hgext.hgk =
hgext.fetch =
hgext.color =
hgext.pager =
hgext.mq =
hgext.rebase =
hgext.purge =
hgext.parentrevspec =
hgext.bookmarks =
hgext.graphlog =
hgext.transplant =
hgshelve = ~/.hgext/hgshelve.py
hgpaste = ~/.hgext/paste.py
hgprompt = ~/.hgext/prompt.py

[diff]
showfunc = 1
nodates = 1
git = 1

[pager]
pager = less -FRSXQ
quiet = True
attend = diff,status,log,qdiff,blame,annotate,pdiff,glog

[alias]
qstatus = status --rev -2:.
untrack = rm -Af
mpaste = paste --dest pastebin.dixo.net --url "https://dev.mydeco.com/pastebin/" --usenetrc
ipaste = paste --dest lodgeit --url "https://paste.insophia.com" --usenetrc
ipastepy = ipaste --stdin --syntax python

[defaults]
#log = --limit 10
addremove = --similarity 100
paste = --dest lodgeit
