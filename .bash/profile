    alias mplayer="mplayer -stop-xscreensaver"
    alias df="df -h"
    alias ssh="TERM=xterm /usr/bin/ssh"
    alias rmepiphany="rm -rf $HOME/.gnome2/epiphany"
    alias vi="gvim"
