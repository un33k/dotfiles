    eval `keychain --eval 2>/dev/null`
    . ~/.bash/colors

    alias ols='/bin/ls --color'
    alias ls='ls --color -h'
    alias ll='ls -l'
    alias lla='ls -Al'
    alias la='ls -A'
    alias l='ls -CF'
    alias rm='rm -f -i'
    alias cp='cp -i'
    alias mv='mv -i'
    alias bc='bc -q -l ~/.bcrc'
    alias grep='grep --color'
